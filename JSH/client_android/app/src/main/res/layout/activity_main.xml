<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ScrollView
            android:id="@+id/showText_ScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/showText_TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="" />
        </ScrollView>
    </LinearLayout>

    <EditText
        android:layout_below="@+id/linear"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/edit_txt_ip"
        android:layout_centerHorizontal="true"
        android:hint="IP"
        android:layout_marginBottom="10dp" />
    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/edit_txt_port"
        android:layout_centerHorizontal="true"
        android:hint="PORT"
        android:layout_below="@+id/edit_txt_ip" />

    <Button
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:text="CONNECT"
        android:id="@+id/btn_connect"
        android:textAllCaps="false"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/edit_txt_port"
        android:layout_toStartOf="@+id/btn_action" />

    <Button
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:text="ACTION"
        android:id="@+id/btn_action"
        android:textAllCaps="false"
        android:layout_alignTop="@+id/btn_connect"
        android:layout_alignEnd="@+id/edit_txt_port" />



</RelativeLayout>

